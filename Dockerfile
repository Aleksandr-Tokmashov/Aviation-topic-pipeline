FROM python:3.13

WORKDIR /app

COPY ./requirements-base.txt ./requirements-prod.txt .
RUN pip install --no-cache-dir -r requirements-base.txt
RUN pip install --no-cache-dir -r requirements-prod.txt

COPY ./app/ ./app/
COPY ./models/ ./models/

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]